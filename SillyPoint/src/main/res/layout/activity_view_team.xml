<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emad.splashscreen.ViewTeam"
    android:background="@drawable/dubai">

    <TextView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="Points of your Playing 11 are enlisted below: "
        android:paddingLeft="30dp"
        android:paddingRight="50dp"

        android:id="@+id/ViewTeam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/White" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="-10dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:gravity="fill_horizontal|right"
        android:background="@color/colorAccent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"

        android:id="@+id/emad"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"

            android:id="@+id/emad1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:id="@+id/emad2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textStyle="bold" />
        </LinearLayout>>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="-10dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:gravity="fill_horizontal|right"
        android:background="@color/colorAccent">
    <ListView
        android:layout_width="130dp"
        android:layout_height="240dp"

        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1px"
        android:id="@+id/TeamView"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"
        android:background="@color/colorAccent"
        android:layout_weight="0.03"
        android:minHeight="240dp" />

        <ListView
            android:layout_width="120dp"
            android:layout_height="240dp"

            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1px"
            android:id="@+id/MatchView"
            android:layout_gravity="center_horizontal"
            android:choiceMode="singleChoice"
            android:background="@color/colorAccent"
            android:layout_weight="0.03"
            android:minHeight="240dp" />

        <ListView
            android:layout_width="100dp"
            android:layout_height="240dp"

            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1px"
            android:id="@+id/Points"
            android:layout_gravity="center_horizontal"
            android:choiceMode="singleChoice"
            android:background="@color/colorAccent"
            android:layout_weight="0.03"
            android:minHeight="240dp" />

        </LinearLayout>
    <Button
        android:id="@+id/close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="65dp"
        android:padding="12dp"
        android:text="Close"
        android:background="@color/colorPrimary"
        android:textColor="#fbf8f8"
        android:textStyle="bold"
        android:textSize="18dp"
        android:typeface="normal"
        android:visibility="visible"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:foregroundGravity="center"
        android:onClick="backmain" />



    <!-- <ListView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/listView"
         android:layout_below="@+id/emad"
         android:layout_centerHorizontal="true"
         android:choiceMode="singleChoice" />
         -->
</LinearLayout>
